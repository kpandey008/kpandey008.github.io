  year      = {2021},
  publisher = {NeurIPS 2021 Workshop on Deep Generative Models and Downstream Applications},
  abstract  = {Diffusion Probabilistic models have been shown to generate state-of-the-art results on several competitive image synthesis benchmarks but lack a low-dimensional, interpretable latent space, and are slow at generation. On the other hand, Variational Autoencoders (VAEs) have access to a low-dimensional latent space but exhibit poor sample quality. Despite recent advances, VAEs usually require large dimensional hierarchies of the latent codes to generate high-quality samples. We present VAEDM, a novel generative framework for \textit{refining} VAE generated samples using diffusion models while also presenting a novel conditional forward process parameterization for diffusion models. We show that the resulting parameterization can improve upon the unconditional diffusion model in terms of sampling efficiency during inference while also equipping diffusion models with the low-dimensional VAE inferred latent code.},
  journal   = {NeurIPS'21, Workshop on Deep Generative Models and Downstream Applications},
  pdf       = {https://openreview.net/pdf?id=-J8dM4ed_92},
  code      = {https://github.com/kpandey008/DiffuseVAE}
}

